{
  "name": "agency-webpack-mix-config",
  "scripts": {
    "dev": "NODE_ENV=development webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "start": "NODE_ENV=development webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "build": "NODE_ENV=production webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "fix-scripts": "eslint --fix 'src/scripts/**/*.{vue,js,jsx,mjs}'",
    "fix-styles": "stylelint --fix 'src/styles/**/*.{css,sass,scss}'"
  },
  "dependencies": {
    "core-js": "^3.1.3",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-compat": "^3.1.1",
    "get-files-in": "^1.1.0",
    "html-critical-webpack-plugin": "^2.1.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "laravel-mix": "^4.0.16",
    "laravel-mix-critical": "^0.1.2",
    "laravel-mix-imagemin": "1.0.0",
    "laravel-mix-polyfill": "^1.0.2",
    "laravel-mix-purgecss": "^4.1.0",
    "laravel-mix-svg-sprite": "^1.0.0",
    "postcss-preset-env": "^6.6.0",
    "sass": "^1.21.0",
    "sass-loader": "^7.1.0",
    "stylelint": "^10.1.0",
    "stylelint-no-unsupported-browser-features": "^3.0.2",
    "stylelint-webpack-plugin": "^0.10.5",
    "vue-template-compiler": "^2.6.10"
  },
  "browserslist": {
    "production": [
      "> 1%",
      "last 2 versions",
      "Firefox ESR",
      "not ie 10",
      "not op_mini all",
      "not op_mob 12.1",
      "not baidu 7.12",
      "not ie_mob 10",
      "not ie_mob 11",
      "not and_uc 11.8"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "compat"
    ],
    "rules": {
      "compat/compat": "warn"
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "ignoreFiles": [
      "web/**/*",
      "vendor/**/*"
    ],
    "defaultSeverity": "warning",
    "rules": {
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignore": [
            "flexbox",
            "calc",
            "will-change",
            "css-filters",
            "outline",
            "viewport-units",
            "css-appearance",
            "css-gradients",
            "css-textshadow",
            "css-initial-value",
            "font-feature",
            "kerning-pairs-ligatures",
            "fontface"
          ]
        }
      ],
      "string-quotes": "single",
      "no-eol-whitespace": true,
      "indentation": 4,
      "max-empty-lines": 2,
      "property-case": "lower",
      "font-family-no-missing-generic-family-keyword": true,
      "function-parentheses-space-inside": "never-single-line",
      "function-comma-space-before": "never-single-line",
      "property-no-vendor-prefix": true,
      "function-linear-gradient-no-nonstandard-direction": true,
      "no-extra-semicolons": true,
      "no-duplicate-at-import-rules": true
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "useTabs": false,
    "tabWidth": 4,
    "semi": false,
    "singleQuote": false
  }
}
